{
    "name": "williamphp/event-dispatcher",
    "description": "A simple library for dispatching events in PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "WilliamPHP\\EventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WilliamPHP\\EventDispatcher\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "role": "Author",
            "name": "William Okafor",
            "email": "wilpat456@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "scripts": {
        "analyze": "./vendor/bin/psalm --show-info=true",
        "test": "./vendor/bin/pest",
        "test-coverage": "./vendor/bin/pest --coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "spatie/ray": "^1.34",
        "vimeo/psalm": "^4.24"
    }
}
