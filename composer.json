{
    "name": "williamphp/event-dispatcher",
    "description": "A simple library for dispatching events in PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "WilliamPHP\\EventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WilliamPHP\\EventDispatcher\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "role": "Author",
            "name": "William Okafor",
            "email": "wilpat456@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "require-dev": {
        "vimeo/psalm": "^4.24"
    }
}
